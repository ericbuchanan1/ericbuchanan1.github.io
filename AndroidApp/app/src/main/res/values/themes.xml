<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.AndroidApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pastel_pink</item>
        <item name="colorPrimaryVariant">@color/darker_orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pastel_pink</item>
        <item name="colorSecondaryVariant">@color/pastel_coral</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/pastel_coral</item>
        <!-- Customize your theme here. -->
        <item name="colorBottomNavigation">@color/bottom_nav_color_light</item>
        <item name="calendarBackgroundColor">@color/calendar_background_light</item>
        <item name="calendarTextColor">@color/calendar_text_light</item>
    </style>



    <style name="Theme.AndroidApp.Night" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_pastel_green</item>
        <item name="colorPrimaryVariant">@color/night_pastel_green</item>
        <item name="colorOnPrimary">@color/night_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/night_pastel_pink</item>
        <item name="colorSecondaryVariant">@color/night_pastel_pink</item>
        <item name="colorOnSecondary">@color/night_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background color -->
        <item name="android:colorBackground">@color/night_background_color</item>
        <!-- Bottom navigation color -->
        <item name="colorBottomNavigation">@color/night_bottom_nav_color</item>
        <!-- Accent color for highlights -->
        <item name="colorAccent">@color/night_darker_orange</item>
        <item name="calendarBackgroundColor">@color/calendar_background_dark</item>
        <item name="calendarTextColor">@color/calendar_text_dark</item>
        <!-- Customize other theme attributes as needed. -->
    </style>
</resources>
